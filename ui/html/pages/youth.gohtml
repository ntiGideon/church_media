{{define "title"}}Youth Ministry | Ascension Baptist Church{{end}}

{{define "main"}}
     <!-- Hero Section -->
    <section class="hero is-medium is-dark is-bold">
        <div class="hero-body">
            <div class="container has-text-centered">
                <h1 class="title is-1 has-text-white slide-in-top">
                    Youth Ministry
                </h1>
                <h2 class="subtitle is-3 has-text-light slide-in-bottom py-3">
                    Empowering the Next Generation to Follow Christ
                </h2>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section class="section">
        <div class="container">
            <div class="columns is-vcentered">
                <div class="column is-6">
                    <h2 class="title is-2 has-text-primary">About Our Youth Ministry</h2>
                    <div class="content has-text-white">
                        <p>The Youth Ministry at Ascension Baptist Church exists to help students (6th-12th grade) develop a lasting faith in Jesus Christ. Through dynamic worship, relevant teaching, and authentic relationships, we create a space where teens can belong, believe, and become who God created them to be.</p>
                        <p>Our ministry is built on three pillars: <strong>Faith</strong>, <strong>Community</strong>, and <strong>Mission</strong>. We're committed to equipping young people to live out their faith in every area of life.</p>
                    </div>
                    <div class="buttons mt-4">
                        <a href="#events" class="button is-primary is-medium is-rounded bounce">
                            <span>Upcoming Events</span>
                            <span class="icon">
                                <i class="fas fa-arrow-right"></i>
                            </span>
                        </a>
                    </div>
                </div>
                <div class="column is-6">
                    <figure class="image is-4by5 rounded-corners shadow">
                        <img class="rounded-corners" src="/static/img/rev.jpg" alt="Youth group gathering">
                    </figure>
                </div>
            </div>
        </div>
    </section>

    <!-- Core Programs Section -->
    <section class="section has-background-light">
        <div class="container">
            <div class="has-text-centered mb-6">
                <h2 class="title is-2 has-text-primary">Our Core Programs</h2>
                <p class="subtitle is-4 has-text-grey-dark py-2">Where teens connect and grow</p>
                <div class="divider is-primary"></div>
            </div>

            <div class="columns is-multiline">
                <div class="column is-4">
                    <div class="box program-card hover-grow">
                        <div class="has-text-centered mb-4">
                            <span class="icon is-large has-text-primary">
                                <i class="fas fa-fire fa-3x"></i>
                            </span>
                        </div>
                        <h3 class="title is-4 has-text-centered">Wednesday Night Live</h3>
                        <p class="has-text-centered has-text-info">Wednesdays at 6:30 PM</p>
                        <div class="content">
                            <p>High-energy worship, relevant messages, and small group discussions designed specifically for teens.</p>
                        </div>
                    </div>
                </div>

                <div class="column is-4">
                    <div class="box program-card hover-grow">
                        <div class="has-text-centered mb-4">
                            <span class="icon is-large has-text-primary">
                                <i class="fas fa-bible fa-3x"></i>
                            </span>
                        </div>
                        <h3 class="title is-4 has-text-centered">Sunday School</h3>
                        <p class="has-text-centered has-text-info">Sundays at 9:15 AM</p>
                        <div class="content">
                            <p>Age-specific Bible studies that help students apply Scripture to their daily lives.</p>
                        </div>
                    </div>
                </div>

                <div class="column is-4">
                    <div class="box program-card hover-grow">
                        <div class="has-text-centered mb-4">
                            <span class="icon is-large has-text-primary">
                                <i class="fas fa-gamepad fa-3x"></i>
                            </span>
                        </div>
                        <h3 class="title is-4 has-text-centered">Friday Night Hangouts</h3>
                        <p class="has-text-centered has-text-info">1st Friday Each Month</p>
                        <div class="content">
                            <p>Fun events designed to build community - game nights, bonfires, concerts, and more.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="section">
        <div class="container">
            <div class="has-text-centered mb-6">
                <h2 class="title is-2 has-text-primary">What Students Are Saying</h2>
                <p class="subtitle is-4 has-text-white">Real stories from our youth</p>
                <div class="divider is-primary"></div>
            </div>

            <div class="columns is-multiline">
                <div class="column is-6">
                    <div class="box testimonial hover-shadow">
                        <div class="media">
                            <div class="media-left">
                                <figure class="image is-64x64">
                                    <img class="is-rounded" src="https://randomuser.me/api/portraits/men/18.jpg" alt="Student testimonial">
                                </figure>
                            </div>
                            <div class="media-content">
                                <p class="title is-5">Jason Miller</p>
                                <p class="subtitle is-6">11th Grade</p>
                            </div>
                        </div>
                        <div class="content">
                            <p>"Youth group has helped me understand how my faith connects to everyday life. The leaders actually care about us and the messages always hit home."</p>
                        </div>
                    </div>
                </div>

                <div class="column is-6">
                    <div class="box testimonial hover-shadow">
                        <div class="media">
                            <div class="media-left">
                                <figure class="image is-64x64">
                                    <img class="is-rounded" src="https://randomuser.me/api/portraits/women/21.jpg" alt="Student testimonial">
                                </figure>
                            </div>
                            <div class="media-content">
                                <p class="title is-5">Emily Carter</p>
                                <p class="subtitle is-6">9th Grade</p>
                            </div>
                        </div>
                        <div class="content">
                            <p>"I was nervous about coming at first, but everyone was so welcoming. Now it's my favorite place to be! I've made real friends who share my values."</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Upcoming Events Section -->
    <section class="section has-background-primary" id="events">
        <div class="container">
            <div class="has-text-centered mb-6">
                <h2 class="title is-2 has-text-white">Upcoming Events</h2>
                <p class="subtitle is-4 has-text-light">Don't miss out!</p>
                <div class="divider is-white"></div>
            </div>

            <div class="columns is-multiline">
                <div class="column is-4">
                    <div class="card event-card hover-float">
                        <div class="card-image">
                            <figure class="image is-16by9">
                                <img src="https://images.unsplash.com/photo-1527529482837-4698179dc6ce?ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=80" alt="Summer camp">
                            </figure>
                        </div>
                        <div class="card-content">
                            <h3 class="title is-4">Summer Camp 2023</h3>
                            <p class="subtitle is-6 has-text-info py-2">June 18-23, 2023</p>
                            <div class="content">
                                <p>Our annual week of spiritual growth, crazy games, and unforgettable memories at Lakeview Christian Camp.</p>
                            </div>
                            <a href="#" class="button is-primary is-rounded is-fullwidth mt-4">
                                <span>Register Now</span>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="column is-4">
                    <div class="card event-card hover-float">
                        <div class="card-image">
                            <figure class="image is-16by9">
                                <img src="https://images.unsplash.com/photo-1540747913346-19e32dc3e97e?ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=80" alt="Mission trip">
                            </figure>
                        </div>
                        <div class="card-content">
                            <h3 class="title is-4">Urban Mission Trip</h3>
                            <p class="subtitle is-6 has-text-info py-2">July 9-14, 2023</p>
                            <div class="content">
                                <p>Serve the homeless and underprivileged in our city while growing in your faith through hands-on ministry.</p>
                            </div>
                            <a href="#" class="button is-primary is-rounded is-fullwidth mt-4">
                                <span>Learn More</span>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="column is-4">
                    <div class="card event-card hover-float">
                        <div class="card-image">
                            <figure class="image is-16by9">
                                <img src="https://images.unsplash.com/photo-1547153760-18fc86324498?ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=80" alt="Back to school bash">
                            </figure>
                        </div>
                        <div class="card-content">
                            <h3 class="title is-4">Back to School Bash</h3>
                            <p class="subtitle is-6 has-text-info py-2">August 12, 2023</p>
                            <div class="content">
                                <p>End summer with a bang! Inflatables, games, food trucks, and a special worship night to kick off the school year.</p>
                            </div>
                            <a href="#" class="button is-primary is-rounded is-fullwidth mt-4">
                                <span>Details</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="has-text-centered mt-6">
                <a href="events.html" class="button is-white is-medium is-rounded swing">
                    <span>View All Events</span>
                    <span class="icon">
                        <i class="fas fa-arrow-right"></i>
                    </span>
                </a>
            </div>
        </div>
    </section>

    <!-- Leadership Section -->
    <section class="section">
        <div class="container">
            <div class="has-text-centered mb-6">
                <h2 class="title is-2 has-text-primary">Youth Ministry Team</h2>
                <p class="subtitle is-4 has-text-white">Meet our leaders</p>
                <div class="divider is-primary"></div>
            </div>

            <div class="columns is-centered">
                <div class="column is-4">
                    <div class="box leader-card hover-grow">
                        <div class="card-image has-text-centered">
                            <figure class="image is-128x128 mx-auto">
                                <img class="is-rounded" src="https://randomuser.me/api/portraits/men/32.jpg" alt="Youth pastor">
                            </figure>
                        </div>
                        <div class="card-content has-text-centered">
                            <h3 class="title is-4">Pastor Ryan Cooper</h3>
                            <p class="subtitle is-6 has-text-primary">Youth Pastor</p>
                            <div class="content">
                                <p>Pastor Ryan has been leading youth for 8 years. He's passionate about helping teens develop a faith that lasts beyond high school.</p>
                            </div>
                            <a href="contact.html" class="button is-primary is-rounded is-small">
                                <span>Contact</span>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="column is-4">
                    <div class="box leader-card hover-grow">
                        <div class="card-image has-text-centered">
                            <figure class="image is-128x128 mx-auto">
                                <img class="is-rounded" src="https://randomuser.me/api/portraits/women/45.jpg" alt="Youth leader">
                            </figure>
                        </div>
                        <div class="card-content has-text-centered">
                            <h3 class="title is-4">Jessica Morales</h3>
                            <p class="subtitle is-6 has-text-primary">Girls Ministry Director</p>
                            <div class="content">
                                <p>Jessica leads our girls' small groups and mentors young women through the challenges of adolescence.</p>
                            </div>
                            <a href="contact.html" class="button is-primary is-rounded is-small">
                                <span>Contact</span>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="column is-4">
                    <div class="box leader-card hover-grow">
                        <div class="card-image has-text-centered">
                            <figure class="image is-128x128 mx-auto">
                                <img class="is-rounded" src="https://randomuser.me/api/portraits/men/55.jpg" alt="Youth leader">
                            </figure>
                        </div>
                        <div class="card-content has-text-centered">
                            <h3 class="title is-4">Marcus Johnson</h3>
                            <p class="subtitle is-6 has-text-primary">Guys Ministry Director</p>
                            <div class="content">
                                <p>Marcus mentors young men through Bible studies, service projects, and one-on-one discipleship.</p>
                            </div>
                            <a href="contact.html" class="button is-primary is-rounded is-small">
                                <span>Contact</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Parent Resources Section -->
    <section class="section has-background-light">
        <div class="container">
            <div class="columns is-vcentered">
                <div class="column is-6">
                    <h2 class="title is-2 has-text-primary">Parent Resources</h2>
                    <div class="content">
                        <p>We partner with parents to help raise godly young adults. Check out these resources:</p>
                        <ul>
                            <li>Monthly Parent Newsletter</li>
                            <li>Discussion Guides for family conversations</li>
                            <li>Recommended books and podcasts</li>
                            <li>Parent prayer group (meets 1st Sundays)</li>
                        </ul>
                    </div>
                    <div class="buttons mt-4">
                        <a href="resources.html" class="button is-primary is-rounded">
                            <span>View Resources</span>
                        </a>
                    </div>
                </div>
                <div class="column is-6">
                    <figure class="image is-16by9 rounded-corners shadow">
                        <img src="https://images.unsplash.com/photo-1588072432836-e10032774350?ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=80" alt="Parents and teens">
                    </figure>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
