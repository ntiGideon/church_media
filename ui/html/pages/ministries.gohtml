{{define "title"}} Church Ministries{{end}}

{{define "main"}}
        <!-- Ministries Hero Section -->
    <section class="hero is-medium is-dark is-bold">
        <div class="hero-body">
            <div class="container has-text-centered">
                <h1 class="title is-1 has-text-white slide-in-top">
                    Our Ministries
                </h1>
                <h2 class="subtitle is-3 has-text-light slide-in-bottom py-2">
                    Connecting, Growing, and Serving Together
                </h2>
            </div>
        </div>
    </section>

    <!-- Main Ministries Section -->
    <section class="section">
        <div class="container">
            <div class="has-text-centered mb-6">
                <h2 class="title is-2 has-text-primary">Find Your Place</h2>
