      <div class="contact-info">
        <h3>Contact Pastor Charles</h3>
        <div class="contact-method">
          <i class="fas fa-phone-alt"></i>
          <div>
            <p class="contact-label">Office Phone</p>
            <p>+233 24 123 4567</p>
          </div>
        </div>
        <div class="contact-method">
          <i class="fas fa-mobile-alt"></i>
          <div>
            <p class="contact-label">Mobile</p>
            <p>+233 55 987 6543 (Emergency only)</p>
          </div>
        </div>
        <div class="contact-method">
          <i class="fas fa-envelope"></i>
          <div>
            <p class="contact-label">Email</p>
            <p>pastor@ascensionappiadu.org</p>
          </div>
        </div>
        <div class="contact-method">
          <i class="fas fa-clock"></i>
          <div>
            <p class="contact-label">Office Hours</p>
            <p>Tuesdays & Thursdays, 10am-3pm</p>
          </div>
        </div>
      </div>

      <div class="location-map">
        <h3>Church Location</h3>
        <div class="map-placeholder">
          <i class="fas fa-map-marker-alt"></i>
          <p>Ascension Baptist Church<br>
          Appiadu Junction, Kumasi-Accra Road<br>
