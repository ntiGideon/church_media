    <!-- Sermon Subscription Section -->
    <section class="section">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-8">
                    <div class="box has-background-primary has-text-centered hover-float">
                        <h3 class="title is-3 has-text-white">Never Miss a Message</h3>
                        <p class="subtitle is-5 has-text-light">Subscribe to receive our weekly sermons</p>
                        <div class="field has-addons is-centered">
                            <div class="control is-expanded">
                                <input class="input is-large is-rounded" type="email" placeholder="Your email address">
                            </div>
                            <div class="control">
                                <button class="button is-white is-large is-rounded bounce">
                                    <span>Subscribe</span>
