    <!-- Sermon Archive Section -->
    <section class="section has-background-primary">
        <div class="container">
            <div class="has-text-centered mb-6">
                <h2 class="title is-2 has-text-white">Sermon Archive</h2>
                <p class="subtitle is-4 has-text-light">Browse messages by date or topic</p>
                <div class="divider is-white"></div>
            </div>

            <div class="columns">
                <div class="column is-6">
                    <div class="box archive-box hover-shadow">
                        <h3 class="title is-4 has-text-centered">Browse by Year</h3>
                        <div class="buttons is-centered are-medium">
                            <a href="#" class="button is-light is-rounded">2023</a>
                            <a href="#" class="button is-light is-rounded">2022</a>
                            <a href="#" class="button is-light is-rounded">2021</a>
